<Window x:Class="STGCodeChallenge8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Code Challenge 8: Credit Card Validator" Height="321" Width="402" Background="Beige">
    <Grid>
        <Label Content="Credit Card #:" TextBlock.TextAlignment="Center" TextBlock.FontSize="14" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="94" Margin="10,20,0,0" />
        <TextBox Name="txtTextToProcess" Margin="109,10,0,0" Height="48" VerticalAlignment="Top" HorizontalAlignment="Left" Width="259" ToolTip="Enter ISBN to Validate." />
        <Button Name="btnValidate" Content="Validate" Height="70" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Margin="35,73,0,0" Click="btnValidate_Click_1"  ToolTip="Validate the ISBN entered in the box." />
        <Label Name="lblShowWork" Height="50" Margin="35,230,0,0" VerticalAlignment="Top" TextBlock.TextAlignment="Center" ToolTip="Message Area" HorizontalAlignment="Left" Width="324" />
        <Label Content="Result:" TextBlock.TextAlignment="Center" TextBlock.FontSize="20" Height="36" VerticalAlignment="Top" HorizontalAlignment="Left" Width="67" Margin="115,160,0,0" />
        <Label Name="lblValid" TextBlock.FontSize="20" Height="36" VerticalAlignment="Top" Margin="190,160,0,0" HorizontalAlignment="Left" Width="178" ToolTip="Valid or Invalid" />
    </Grid>
</Window>
